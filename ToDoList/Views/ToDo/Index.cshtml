@model IEnumerable<ToDo>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">ToDo List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="ToDo" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New ToDo
            </a>
        </div>
    </div>
    <br/><br/>

    <table class="table table-bordered table table-striped" style="width:100%">
        <thead>
        <tr>
            <th>ToDo Title</th>
            <th>ToDo Is Done</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var todo in Model)
        {
            <tr>
                <td style="width:50%">@todo.Title</td>
                <td style="width:30%">@todo.DueDate.ToShortDateString()</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="ToDo" asp-action="Edit" asp-route-id="@todo.ToDoId"
                           class="btn btn-primary mx_1">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a asp-controller="ToDo" asp-action="Delete" asp-route-id="@todo.ToDoId"
                           class="btn btn-danger mx_1">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>